<div class="container">

  <div class="row justify-content-md-center">
    <div class="col col-lg-12 py-3">
      <h1 class="text-center">Relay</h1>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col col-lg-5 my-2 p-2">
      <div class="card">
        <h4 class="card-title text-center pt-4">Create Your Relay Account</h4>
        <% if alert %>
          <p class="text-danger text-center"> alert </p>
        <% end %>

        <div class="card-body">
          <%= form_for(
            resource,
            as: resource_name,
            url: registration_path(resource_name)) do |f| %>

            <div class="row">
              <div class="col">
                <div class="form-group">
                  <%= f.label :first_name, class: "small" %><br />
                  <%= f.text_field :email, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="col">
                <div class="form-group">
                  <%= f.label :last_name, class: "small"  %><br />
                  <%= f.text_field :email, autofocus: true, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email, class: "small" %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "small" %>
              <% if @minimum_password_length %>
                <em class="small">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "small"  %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>

            <%= f.submit "Register", class: "btn btn-primary float-right" %>
          <% end %>

        </div> <!-- card-body -->
      </div> <!-- card -->
    </div> <!-- col -->
  </div> <!-- row -->

  <div class="row justify-content-md-center">
    <div class="col col-lg-5 text-center mt-3 devise-links">
      <%= render "devise/shared/links" %>
    </div> <!-- col -->
  </div> <!-- row -->

</div> <!-- container -->
